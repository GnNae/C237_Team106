<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>The Pet Shop</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">The Pet Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add New Pet</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Pet List</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Name</th>
            <th width="100">Image</th>
            <th width="50">Age</th>
            <th width="50">Gender</th>
            <th width="50">Breed</th>
            <th width="50">Price</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < pets.length; i++) { %>
          <tr>
            <td><a href="/product/<%= pets[i].petId %>" ><%= pets[i].name %></a></td>
            <td><img src = "images/<%= pets[i].image %>" width="20%"></td>
            <td><%= pets[i].age %></td>
            <td><%= pets[i].gender %></td>
            <td><%= pets[i].breed %></td>
            <td>$<%= pets[i].price.toFixed(2) %></td>
            <!-- Edit Link -->
            <td><a href="/updateProduct/<%= pets[i].petId %>">Edit</a></td>
            <!-- Delete Link -->
            <td><a href="/deleteProduct/<%= pets[i].petId %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
